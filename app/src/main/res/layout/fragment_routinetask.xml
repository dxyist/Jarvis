<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <CheckBox
        android:id="@+id/checkbox_dailytask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/text_dailytask_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/checkbox_dailytask"
        android:text="content"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/text_dailytask_bouns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="奖励："
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_dailytask_bouns_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/text_dailytask_bouns"
            android:text="5"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_dailytask_punch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/text_dailytask_bouns"
            android:text="惩罚："
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_dailytask_punch_value"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_dailytask_bouns"
            android:layout_toRightOf="@+id/text_dailytask_punch"
            android:text="5"
            android:textSize="12sp" />
    </RelativeLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:layout_alignParentBottom="true"
        android:background="@color/grey_150" />
</RelativeLayout>
