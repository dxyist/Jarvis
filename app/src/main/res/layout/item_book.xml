<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingLeft="6dp"
    android:paddingRight="6dp">

    <CheckBox
        android:id="@+id/checkbox_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/text_book_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@id/checkbox_temp"
        android:text="书本一号"
        android:textColor="@color/grey_900"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text_book_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/text_book_title"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/text_book_title"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="2dp"
        android:text="这是一本特别特别好的书"
        android:textColor="@color/grey_400"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="28sp"
        android:layout_alignBottom="@id/text_book_subtitle"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">


        <TextView
            android:id="@+id/text_book_read_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:text="100/888页"
            android:textSize="12sp" />

    </RelativeLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:layout_alignParentBottom="true"
        android:background="@color/grey_150" />
</RelativeLayout>
