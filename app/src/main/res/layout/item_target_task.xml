<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <CheckBox
        android:checked="false"
        android:id="@+id/checkbox_target_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/text_target_task_deadline_hint"
        android:text="6"
        android:textSize="10dp"
        android:layout_marginTop="25dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_below="@+id/checkbox_target_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_target_task_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/checkbox_target_task"
        android:text="content"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/text_target_task_deadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_target_task_title"
        android:layout_below="@+id/text_target_task_title"
        android:text="剩余X天"
        android:textSize="12sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/text_target_task_bouns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="奖励："
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_target_task_bouns_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/text_target_task_bouns"
            android:text="5"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_target_task_punch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/text_target_task_bouns"
            android:text="惩罚："
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_target_task_punch_value"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_target_task_bouns"
            android:layout_toRightOf="@+id/text_target_task_punch"
            android:text="5"
            android:textSize="12sp" />
    </RelativeLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:layout_alignParentBottom="true"
        android:background="@color/grey_150" />
</RelativeLayout>
