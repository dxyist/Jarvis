<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <CheckBox
        android:id="@+id/checkbox_dailytask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/text_dailytask_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/checkbox_dailytask"
        android:text="content"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/spin_project_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_dailytask_title"
        android:layout_below="@+id/text_dailytask_title" />

    <Spinner
        android:layout_toRightOf="@+id/spin_project_class"
        android:id="@+id/spin_project_context"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_dailytask_title"
        android:layout_below="@+id/text_dailytask_title" />
</RelativeLayout>
